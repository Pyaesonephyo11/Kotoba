<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#E1E1E4"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardMaxElevation=".1dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:textColor="#605C5C"
                android:textSize="16sp"
                android:text="qeorqripeiqrpiqpripeqripafdfadfdafdsiqpriepidsafsdfasfadsfpi" />

            <RelativeLayout
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="23dp">

                <ImageView

                    android:id="@+id/img_show"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    app:srcCompat="@drawable/show" />

                <ImageView
                    android:id="@+id/img_hide"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/hide" />
            </RelativeLayout>

<!--            <ImageView-->
<!--                android:gravity="center"-->
<!--                android:layout_marginTop="4dp"-->
<!--                android:id="@+id/img_speaker"-->
<!--                android:layout_width="10dp"-->
<!--                android:layout_height="23dp"-->
<!--                android:layout_weight="1"-->
<!--                app:srcCompat="@drawable/speaker" />-->
        </LinearLayout>
        <TextView
            android:id="@+id/en"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="19 "
            android:visibility="gone"
            android:textColor="#605C5C"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/mm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="19 "
            android:textColor="#605C5C"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>